//https://open.kattis.com/submissions/13902025
#include <bits/stdc++.h>
using namespace std;
int main()
{
    string s;
    int x=0;
    while(cin >> s)
    {
        for(int i=0;i<s.size();++i)
        {
            if(s[i]=='A'||s[i]=='E'||s[i]=='I'||s[i]=='O'||s[i]=='U')++x;
            if(s[i]=='a'||s[i]=='e'||s[i]=='i'||s[i]=='o'||s[i]=='u')++x;
        }
    }
    cout << x;
}
